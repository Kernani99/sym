<body>

<header>
<img src="https://i.imgur.com/cEUkK67.png" alt="شعار الشركة" style="width: 190px; height: auto;">

    <h1>متابعة طلبات المنصة الإلكترونية</h1>
</header>

<div class="container" id="loginBox">
    <h3>أدخل كلمة المرور للدخول</h3>
    <input type="password" id="passwordInput" placeholder="كلمة المرور">
    <br>
    <button onclick="verifyPassword()">دخول</button>
    <p id="errorText" style="color:red;"></p>
</div>

<div class="container" id="mainContent" style="display:none;">
    <h3>أدخل رقم هاتفك </h3>
    <input type="text" id="studentId" placeholder="رقم الهاتف المسجل">
    <br>
    <button onclick="showResult()">عرض النتيجة</button>
    <div class="result" id="resultBox"></div>
    <button id="printBtn" onclick="printResult()" style="display:none;">طباعة النتيجة</button>
</div>

<script>
    const password = "sym123"; // غيّر كلمة المرور حسب الرغبة
    let students = {};

    function verifyPassword() {
        const input = document.getElementById("passwordInput").value;
        const errorText = document.getElementById("errorText");
        if (input === password) {
            document.getElementById("loginBox").style.display = "none";
            document.getElementById("mainContent").style.display = "block";
            loadExcelFromURL(); // تحميل البيانات بعد الدخول
        } else {
            errorText.textContent = "كلمة المرور غير صحيحة.";
        }
    }

    async function loadExcelFromURL() {
        const url = "https://docs.google.com/spreadsheets/d/e/2PACX-1vTgq_fCVYPzADsm5bwrukjW-3F5YuwXNpwRv6R4lOpqubU7HVTbXo_F_neHq6KdagnxfM0eDp8Lx2MK/pub?output=xlsx"; // ✳️ غيّر هذا الرابط إلى رابط Excel مباشر
        try {
            const response = await fetch(url);
            const arrayBuffer = await response.arrayBuffer();
            const workbook = XLSX.read(arrayBuffer, { type: 'array' });
            const sheet = workbook.Sheets[workbook.SheetNames[0]];
            const data = XLSX.utils.sheet_to_json(sheet);

            students = {};
            data.forEach(row => {
                students[row.ID] = {
                    name: row.Name,
                    grade: row.Grade,
                    note: row.Note,
                    status: row.Status
                };
            });

            alert("يمكنك البحث");
        } catch (error) {
            alert("يوجد مشكل في الموقع.");
            console.error(error);
        }
    }

    function showResult() {
        const id = document.getElementById("studentId").value.trim();
        const resultBox = document.getElementById("resultBox");
        const printBtn = document.getElementById("printBtn");

        if (students[id]) {
            const s = students[id];
            resultBox.innerHTML = `
                <div id="printArea">
                    <h3>الاسم: ${s.name}</h3>
                    <p>نوع الدراجة: ${s.grade}</p>
                    <p>الولاية: ${s.note}</p>
                    <p> حالة الطلب: ${s.status}</p>
                </div>
            `;
            printBtn.style.display = "inline-block";
        } else {
            resultBox.innerHTML = "<p style='color:red;'>الرقم غير موجود.</p>";
            printBtn.style.display = "none";
        }
    }

    function printResult() {
        const content = document.getElementById("printArea").innerHTML;
        const w = window.open('', '', 'width=800,height=600');
        w.document.write('<html><head><title>نتيجة الطلب</title></head><body style="direction:rtl;font-family:Cairo;">');
        w.document.write(content);
        w.document.write('</body></html>');
        w.document.close();
        w.print();
    }
</script>

</body>
</html>


